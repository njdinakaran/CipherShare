<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/MainBackground"
    tools:context=".encrypt_activity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/gradient_color_background">

            <TextView
                android:id="@+id/textView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Decrypt"
                android:textColor="@color/white"
                android:textSize="38sp"
                android:textStyle="bold"
                android:fontFamily="@font/poppins_semibold"
                android:layout_marginStart="24dp"
                android:layout_marginTop="32dp"/>

            <TextView
                android:id="@+id/textView2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Get to know how the decryption\nworks by exploring now!"
                android:textColor="@color/white"
                android:textSize="18sp"
                android:fontFamily="@font/poppins_semibold"
                android:layout_marginTop="24dp"
                android:layout_marginStart="24dp"/>

            <ImageView
                android:id="@+id/backgroundImage"
                android:layout_width="match_parent"
                android:layout_height="300dp"
                android:layout_marginTop="24dp"
                android:src="@drawable/credit"
                />

            <EditText
                android:id="@+id/cipherTextInput"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="24dp"
                android:layout_marginStart="24dp"
                android:layout_marginEnd="24dp"
                android:layout_marginBottom="12dp"
                android:ems="10"
                android:inputType="text"
                android:hint="Enter Cipher Text"
                android:background="@drawable/button_background_dark"
                android:textColor="@color/white"
                android:fontFamily="@font/poppins_semibold"
                android:textColorHint="@color/white"
                android:textAlignment="center"
                />

            <Spinner
                android:id="@+id/algorithmsSpinner"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginStart="24dp"
                android:layout_marginEnd="24dp"
                android:textAlignment="center"
                android:layout_marginBottom="12dp"
                android:popupTheme="@style/MySpinnerStyle"
                android:background="@drawable/button_background_dark"
                />

            <EditText
                android:id="@+id/keyInputLabel"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginStart="24dp"
                android:layout_marginEnd="24dp"
                android:layout_marginBottom="12dp"
                android:ems="10"
                android:visibility="gone"
                android:hint="Enter Key"
                android:background="@drawable/button_background_dark"
                android:textColor="@color/white"
                android:fontFamily="@font/poppins_semibold"
                android:textColorHint="@color/white"
                android:textAlignment="center"
                />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/decryptCipherButton"
                android:layout_width="match_parent"
                android:textSize="18sp"
                android:textStyle="bold"
                android:layout_gravity="center"
                android:layout_height="wrap_content"
                android:background="@drawable/green_bg"
                android:textColor="@color/black"
                style="@android:style/Widget.Button"
                android:text="Decrypt Cipher"
                android:layout_centerVertical="true"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="12dp"
                android:layout_marginStart="24dp"
                android:layout_marginEnd="24dp"
                android:fontFamily="@font/poppins_semibold"/>

            <TextView
                android:id="@+id/description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="24dp"
                android:layout_marginEnd="24dp"
                android:layout_marginTop="24dp"
                android:alpha="0.5"
                android:clickable="true"
                android:fontFamily="@font/poppins_semibold"
                android:text="Enter the Cipher Text and select the method to decrypt your message"
                android:textAlignment="center"
                android:textColor="@color/white" />

        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>
